#include <dt-bindings/zmk/matrix-transform.h>

/ {
    chosen {
        zmk,keyboard = &corne_romac;
        zmk,keymap = &keymap;
    };

    // 矩阵变换配置
    matrix_transform {
        compatible = "zmk,matrix-transform";
        rows = <4>;
        columns = <10>;
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)           RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)           RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)           RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4)           RC(3,5) RC(3,6) RC(3,7) RC(3,8) RC(3,9)
        >;
    };

    // 键盘定义
    corne_romac: corne_romac {
        compatible = "zmk,keyboard";

        // 左右半部分配置
        left_kscan: kscan_left {
            compatible = "zmk,kscan-gpio-matrix";
            label = "Left KSCAN";
            diode-direction = "col2row";
            row-gpios = <&pro_micro 6 GPIO_ACTIVE_HIGH   // Row 0 from left side
                         &pro_micro 7 GPIO_ACTIVE_HIGH   // Row 1
                         &pro_micro 8 GPIO_ACTIVE_HIGH   // Row 2
                         &pro_micro 9 GPIO_ACTIVE_HIGH>; // Row 3
            col-gpios = <&pro_micro 19 GPIO_PULL_DOWN    // Col 0
                         &pro_micro 18 GPIO_PULL_DOWN    // Col 1
                         &pro_micro 17 GPIO_PULL_DOWN    // Col 2
                         &pro_micro 16 GPIO_PULL_DOWN    // Col 3
                         &pro_micro 15 GPIO_PULL_DOWN>;  // Col 4
        };

        right_kscan: kscan_right {
            compatible = "zmk,kscan-gpio-matrix";
            label = "Right KSCAN";
            diode-direction = "col2row";
            row-gpios = <&pro_micro 6 GPIO_ACTIVE_HIGH   // Row 0 from right side
                         &pro_micro 7 GPIO_ACTIVE_HIGH   // Row 1
                         &pro_micro 8 GPIO_ACTIVE_HIGH   // Row 2
                         &pro_micro 9 GPIO_ACTIVE_HIGH>; // Row 3
            col-gpios = <&pro_micro 10 GPIO_PULL_DOWN    // Col 5
                         &pro_micro 14 GPIO_PULL_DOWN    // Col 6
                         &pro_micro 20 GPIO_PULL_DOWN    // Col 7
                         &pro_micro 23 GPIO_PULL_DOWN    // Col 8
                         &pro_micro 21 GPIO_PULL_DOWN>;  // Col 9
        };
    };

    // 蓝牙模块配置
    bt: bt {
        compatible = "zmk,bt";
    };

    // 电源管理配置
    power_management {
        compatible = "zmk,power-management";
        ext-power {
            compatible = "zmk,ext-power";
            gpios = <&pro_micro 13 GPIO_ACTIVE_HIGH>;
        };
    };

    // LED 指示器配置
    power_led {
        gpios = <&pro_micro 13 GPIO_ACTIVE_HIGH>;
    };

    // 电池电量显示（如果支持）
    battery {
        compatible = "zmk,battery";
        #io-channel-cells = <0>;
    };
};